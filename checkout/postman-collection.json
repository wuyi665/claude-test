    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. 创建订单 (Insert Order)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "appid",
              "value": "00011114",
              "type": "text"
            },
            {
              "key": "cusid",
              "value": "customer123",
              "type": "text"
            },
            {
              "key": "amount",
              "value": "100.00",
              "type": "text"
            },
            {
              "key": "bizseq",
              "value": "ORDER20250729001",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8080/api/InsertOrder",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "InsertOrder"]
        }
      }
    },
    {
